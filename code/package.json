{
  "name": "settlement-job-worker",
  "version": "1.0.0",
  "description": "Serverless functions for HaloDAO token bridge",
  "main": "index.js",
  "scripts": {
    "postinstall": "cd token-bridge && npm install",
    "lint": "eslint . --ext .ts,.tsx",
    "local": "serverless offline",
    "deploy": "serverless deploy",
    "deploy:prod": "serverless deploy --stage production",
    "test": "cross-env NODE_ENV=dev mocha -r ts-node/register tests/*.test.ts --exit",
    "coverage": "nyc --reporter lcov npm run test",
    "remove": "serverless remove",
    "migrate:make": "knex migrate:make --knexfile=./database/knex.ts --migrations-directory migrations/ -x ts $NAME",
    "db:migrate:latest": "knex migrate:latest --knexfile=./database/knex.ts",
    "db:migrate:rollback": "knex migrate:rollback --knexfile=./database/knex.ts",
    "db:migrate:reset": "npm run db:migrate:rollback && npm run db:migrate:latest",
    "db:migrate:up": "knex migrate:up ${NAME} --migrations-directory migrations/ --knexfile=./database/knex.ts",
    "db:migrate:down": "knex migrate:down ${NAME} --migrations-directory migrations/ --knexfile=./database/knex.ts",
    "seed:make": "knex seed:make --knexfile=./database/knex.ts $NAME -x ts",
    "seed:run": "knex seed:run --knexfile=./database/knex.ts",
    "seed:run:specific": "knex seed:run --specific=${NAME} --knexfile=./database/knex.ts",
    "prettify": "prettier --config .prettierrc '*/**/*.ts' --write"
  },
  "pre-commit": [
    "prettify",
    "lint"
  ],
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.20.0",
    "async": "^3.2.0",
    "awilix": "^4.3.1",
    "aws-sdk": "^2.947.0",
    "axios": "^0.21.0",
    "camelcase-keys": "^6.2.2",
    "decamelize-keys": "^1.1.0",
    "dotenv": "^8.2.0",
    "ethers": "^5.4.1",
    "knex": "^0.21.14",
    "knex-aurora-data-api-mysql": "^1.0.3",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "pg": "^8.6.0",
    "pino": "^6.8.0",
    "uuidv4": "^6.2.6"
  },
  "devDependencies": {
    "@types/async": "^3.2.5",
    "@types/aws-lambda": "^8.10.51",
    "@types/axios": "^0.14.0",
    "@types/chai": "^4.2.11",
    "@types/knex": "^0.16.1",
    "@types/lambda-tester": "^3.6.0",
    "@types/lodash": "^4.14.165",
    "@types/mocha": "^7.0.2",
    "@types/moment": "^2.13.0",
    "@types/node": "^16.3.3",
    "@types/pino": "^6.3.4",
    "@types/sinon": "^10.0.2",
    "@typescript-eslint/eslint-plugin": "~4.16.1",
    "@typescript-eslint/parser": "~4.16.1",
    "chai": "^4.2.0",
    "cross-env": "^7.0.2",
    "eslint": "~7.21.0",
    "eslint-config-prettier": "~8.1.0",
    "istanbul": "^0.4.5",
    "lambda-tester": "^4.0.1",
    "mocha": "^7.1.2",
    "nyc": "^15.0.1",
    "prettier": "^2.3.2",
    "serverless-dotenv-plugin": "^3.2.0",
    "serverless-middleware": "0.0.14",
    "serverless-offline": "^6.8.0",
    "serverless-plugin-reducer": "^3.2.4",
    "serverless-plugin-typescript": "^1.1.9",
    "sinon": "^11.1.1",
    "ts-node": "^8.9.1",
    "tslint": "^6.1.3",
    "typescript": "^3.8.3"
  },
  "keywords": [
    "Bridge",
    "Node",
    "TypeScript",
    "ServerLess",
    "AWS Lambda",
    "DynamoDB",
    "Ethers"
  ],
  "author": "Brent Tudas",
  "license": "ISC"
}
